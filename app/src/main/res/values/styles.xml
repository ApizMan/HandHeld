<resources>

    <style name="scrollView">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/text_special_color</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/text_special_color</item>
        <item name="colorPrimaryDark">@color/button_gradientE</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:listDivider">@color/base</item>

        <item name="colorControlNormal">@color/text_special_color</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/aluminum</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropdownStyle</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
    </style>

    <style name="AppTheme.Background" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/text_special_color</item>
        <item name="colorPrimaryDark">@color/button_gradientE</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:listDivider">@color/base</item>

        <item name="colorControlNormal">@color/text_special_color</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/aluminum</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropdownStyle</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
    </style>

    <style name="MySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MySpinnerDropdownStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/text_special_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_special_color</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/text_special_color</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>